
a = float(input("Enter the first number: "))
b = float(input("Enter the second number: "))

print("Choose operation: 1 - sum, 2 - difference, 3 - average, 4 - product")
choice = input("Your choice: ")

if choice == "1":
    result = a + b
    print("The sum is:", result)
elif choice == "2":
    result = a - b
    print("The difference is:", result)
elif choice == "3":
    result = (a + b) / 2
    print("The average is:", result)
elif choice == "4":
    result = a * b
    print("The product is:", result)
else:
    print("Invalid option")



a = float(input("Enter the first number: "))
b = float(input("Enter the second number: "))

if a < b:
    print("The minimum number is:", a)
elif b < a:
    print("The minimum number is:", b)
else:
    print("Both numbers are equal.")



amount = float(input("Enter amount in dollars: "))
currency = input("Choose currency (eur, gbp, jpy): ")

if currency == "eur":
    rate = float(input("Enter exchange rate for euro: "))
    converted = amount * rate
    print("Amount in euro:", converted)

elif currency == "gbp":
    rate = float(input("Enter exchange rate for pounds: "))
    converted = amount * rate
    print("Amount in pounds:", converted)

elif currency == "jpy":
    rate = float(input("Enter exchange rate for yen: "))
    converted = amount * rate
    print("Amount in yen:", converted)

else:
    print("Unknown currency.")



