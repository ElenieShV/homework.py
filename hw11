#Task2

numbers = list(map(int, input("Enter numbers separated by commas: ").split(",")))
unique = []
for num in numbers:
    if numbers.count(num) == 1:
        unique.append(num)
print(unique)

#Task3

numbers = list(map(int, input("Enter numbers separated by commas: ").split(",")))
max_seq = []
current_seq = [numbers[0]]
for i in range(1, len(numbers)):
    if numbers[i] > numbers[i - 1]:
        current_seq.append(numbers[i])
    else:
        if len(current_seq) > len(max_seq):
            max_seq = current_seq
        current_seq = [numbers[i]]
if len(current_seq) > len(max_seq):
    max_seq = current_seq
print("Length of the sequence:", len(max_seq))
print("Sequence:", max_seq)

#Task6

nums = list(map(int, input("Enter numbers separated by commas: ").split(',')))
nums.sort()
result = []
while nums:
    result.append(nums.pop(0))      
    if nums:
        result.append(nums.pop(-1)) 
print(result)

  
